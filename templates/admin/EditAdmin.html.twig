{% extends 'base-back.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <!-- main title -->
    <div class="col-12">
        <div class="main__title">
            <h2>Users</h2>
        </div>
        <div>
            <a href="{{ path('app_register_admin') }}" class="sign__btn">Add admin</a>
        </div>

    <!-- end main title -->


    <!-- users -->
        <div class="col-12">
            <div class="main__table-wrap">
                <table class="main__table">
                <thead>
                <tr>
                    <th>Profile</th>
                    <th>Role</th>
                    <th>Compte</th>
                    <th>ACTIONS</th>
                </tr>
                </thead>

                <tbody>
                {% for user in users %}

                <tr>
                    <td>
                        <div class="main__user">
                            <div class="main__avatar">
                                <img src="{{ asset('uploads/images/' ~ user.image) }}" alt="">
                            </div>
                            <div class="main__meta">
                                <h3>{{ user.name }}</h3>
                                <span>{{user.email}}</span>
                            </div>
                        </div>
                    </td>
                    <td>

                        <div class="main__table-text">{% for role in user.roles %} {{ role }} {% endfor %}</div>

                    </td>
                    <td>
                        {% if user.etat == 1 %}
                            <div class="main__table-text main__table-text--red">Bloquer</div>
                        {% else %}
                            <div class="main__table-text main__table-text--green">DÃ©bloquer</div>
                        {% endif %}
                    </td>
                    <td>
                        {% if user.roles|first == "ROLE_ADMIN" %}
                            <div class="main__table-btns">
                                {% if user.etat == 1 %}
                                <form method="post" action="{{ path('app_user_edit_etat', {'id': user.id}) }}" >
                                    <button type="submit" class="main__table-btn main__table-btn--banned__red open-modal">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,13a1.49,1.49,0,0,0-1,2.61V17a1,1,0,0,0,2,0V15.61A1.49,1.49,0,0,0,12,13Zm5-4V7A5,5,0,0,0,7,7V9a3,3,0,0,0-3,3v7a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V12A3,3,0,0,0,17,9ZM9,7a3,3,0,0,1,6,0V9H9Zm9,12a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V12a1,1,0,0,1,1-1H17a1,1,0,0,1,1,1Z"/></svg>
                                    </button>
                                </form>
                                {% else %}
                                    <form method="post" action="{{ path('app_user_edit_etat', {'id': user.id}) }}" >
                                        <button type="submit" class="main__table-btn main__table-btn--banned open-modal">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,13a1.49,1.49,0,0,0-1,2.61V17a1,1,0,0,0,2,0V15.61A1.49,1.49,0,0,0,12,13Zm5-4V7A5,5,0,0,0,7,7V9a3,3,0,0,0-3,3v7a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V12A3,3,0,0,0,17,9ZM9,7a3,3,0,0,1,6,0V9H9Zm9,12a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V12a1,1,0,0,1,1-1H17a1,1,0,0,1,1,1Z"/></svg>
                                        </button>
                                    </form>
                                {% endif %}
                                <form method="post" action="{{ path('app_user_edit_etat', {'id': user.id}) }}" >
                                    <button type="submit" class="main__table-btn main__table-btn--edit">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M22,7.24a1,1,0,0,0-.29-.71L17.47,2.29A1,1,0,0,0,16.76,2a1,1,0,0,0-.71.29L13.22,5.12h0L2.29,16.05a1,1,0,0,0-.29.71V21a1,1,0,0,0,1,1H7.24A1,1,0,0,0,8,21.71L18.87,10.78h0L21.71,8a1.19,1.19,0,0,0,.22-.33,1,1,0,0,0,0-.24.7.7,0,0,0,0-.14ZM6.83,20H4V17.17l9.93-9.93,2.83,2.83ZM18.17,8.66,15.34,5.83l1.42-1.41,2.82,2.82Z"/></svg>
                                    </button>
                                </form>
                                <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}" >
                                    <button type="submit" class="main__table-btn main__table-btn--delete open-modal">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z"/></svg>
                                    </button>
                                </form>

                            </div>
                            {% else %}
                                <div class="main__table-btns">
                                    {% if user.etat == 1 %}
                                        <form method="post" action="{{ path('app_user_edit_etat', {'id': user.id}) }}" >
                                            <button type="submit" class="main__table-btn main__table-btn--banned__red open-modal">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,13a1.49,1.49,0,0,0-1,2.61V17a1,1,0,0,0,2,0V15.61A1.49,1.49,0,0,0,12,13Zm5-4V7A5,5,0,0,0,7,7V9a3,3,0,0,0-3,3v7a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V12A3,3,0,0,0,17,9ZM9,7a3,3,0,0,1,6,0V9H9Zm9,12a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V12a1,1,0,0,1,1-1H17a1,1,0,0,1,1,1Z"/></svg>
                                            </button>
                                        </form>
                                    {% else %}
                                        <form method="post" action="{{ path('app_user_edit_etat', {'id': user.id}) }}" >
                                            <button type="submit" class="main__table-btn main__table-btn--banned open-modal">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,13a1.49,1.49,0,0,0-1,2.61V17a1,1,0,0,0,2,0V15.61A1.49,1.49,0,0,0,12,13Zm5-4V7A5,5,0,0,0,7,7V9a3,3,0,0,0-3,3v7a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V12A3,3,0,0,0,17,9ZM9,7a3,3,0,0,1,6,0V9H9Zm9,12a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V12a1,1,0,0,1,1-1H17a1,1,0,0,1,1,1Z"/></svg>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}" >
                                        <button type="submit" class="main__table-btn main__table-btn--delete open-modal">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z"/></svg>
                                        </button>
                                    </form>
                                </div>

                        {% endif %}

                    </td>
                </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- end users -->

{% endblock %}
